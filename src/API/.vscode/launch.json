{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceRoot}/bin/Debug/netcoreapp1.0/API.dll",
      "args": [ ],
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "cwd": "${workspaceRoot}",
      "stopAtEntry": false,
      "launchBrowser": {
        "enabled": true,
        "args": "http://127.0.0.1:5000/",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start http://127.0.0.1:5000/"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      }
    }
  ]
}
